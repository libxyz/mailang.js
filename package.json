{
  "name": "mai-lang-parser",
  "version": "0.1.0",
  "description": "Mai language AST parser using Chevrotain",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"**/*.{md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"**/*.{md,json}\"",
    "format:staged": "prettier --write",
    "prepare": "ts-patch install"
  },
  "keywords": [
    "mai",
    "parser",
    "ast",
    "chevrotain",
    "language"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^10.5.0",
    "typia": "^9.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/prettier": "^2.7.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.0.1",
    "typescript-eslint": "^8.20.0",
    "globals": "^16.0.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.22.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "typescript": "~5.9.2"
  },
  "files": [
    "dist/**/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "npm run format:check && npm run lint && npm run test"
  }
}
